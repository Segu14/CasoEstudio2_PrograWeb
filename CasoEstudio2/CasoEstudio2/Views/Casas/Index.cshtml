@model IEnumerable<CasoEstudio2.Models.CasasModel>

<h2>Listado de Casas</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">@ViewBag.Error</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Usuario</th>
                <th>Estado</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var casa in Model)
            {
                <tr>
                    <td>@casa.DescripcionCasa</td>
                    <td>@casa.PrecioCasa.ToString("N2")</td>
                    <td>@casa.UsuarioAlquiler</td>
                    <td>@casa.EstadoCasa</td>
                    <td>@casa.FechaAlquiler</td>
                </tr>
            }
        </tbody>
    </table>
}